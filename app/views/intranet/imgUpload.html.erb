<div class="panel-header panel-header-lg center-header">
    <header>사진 업로드</header>
</div>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <%= form_for @image, url: create_image_path do |i| %>
            <%= i.hidden_field :user_id, value: current_user.id %>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">UPLOAD IMAGE</h5>
                    <h4 class="card-title" style="font-weight: 600">사진 업로드</h4>
                </div>
                <div class="card-body">
                    <%= i.text_field :title, class: 'title input-text', placeholder: "제목을 입력하세요", autofocus: "on", required: true %>
                    <%= i.label :title, "제목", class: "input-label" %>
                    <div class="filebox">
                        <%= i.file_field :file, class: "inputfile", "data-multiple-caption": "{count} files selected" %>
                        <label for="image[file]" class="fileTrigger">
                            <figure>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path fill="#fff" d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
                            </figure>
                            <span>파일을 여기로 가져오세요</span>
                        </label>
                    </div>
                </div>
                <div class="card-footer">
                    <%= i.submit "업로드", class: "btn btn-primary btn-block" %>
                </div>
            </div
            <% end %>
        </div>
    </div>
</div>