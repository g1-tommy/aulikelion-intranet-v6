<div class="panel-header panel-header-lg center-header">
    <header>이벤트 수정</header>
</div>
<div class="content">
    <div class="row">
        <div class="col-12">
            <%= form_for @event, url: update_event_path do |f| %>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-category">Update Event</h5>
                    <h4 class="card-title" style="font-weight: 600">이벤트 수정</h4>
                </div>
                <div class="card-body" style="position: relative;">
                    <%= f.text_field :title, required: true, class: "title input-text", placeholder: "이벤트명" %>
                    <%= f.label :title, "이벤트명", class: "input-label" %>
                    <%= f.datetime_field :start, required: true, class: "title datepicker input-text", placeholder: "시작일" %>
                    <%= f.datetime_field :end, value: (@event.end.to_datetime - 1.day).strftime("%Y-%m-%dT00:00:00"), required: true, class: "title datepicker input-text", placeholder: "종료일, 일일 이벤트는 시작일=종료일" %>
                    <%= f.cktext_area :content, cols: 400, ckeditor: { uiColor: '#F2F3F5', height: '60vh', toolbar: "mini" } %>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pickadate.js/3.5.6/compressed/legacy.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pickadate.js/3.5.6/compressed/picker.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pickadate.js/3.5.6/compressed/picker.date.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pickadate.js/3.5.6/compressed/picker.time.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/pickadate.js/3.5.6/compressed/translations/ko_KR.js"></script>
                    <script>
                        $('.datepicker').pickadate({format: 'yyyy-mm-dd'});
                        $("input[name='event[start]_submit']").remove();
                        $("input[name='event[end]_submit']").remove();
                    </script>
                </div>
                <div class="card-footer">
                    <%= f.submit "등록", class: "btn btn-primary btn-block" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>